<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="com.project.childprj.repository.UserRepository">
    <sql id="SELECT_BASE">
        SELECT
        id "id"
        , loginId "loginId"
        , password "password"
        , nickName "nickName"
        , name "name"
        , email "email"
        , createDate "createDate"
        FROM user
        WHERE 1 = 1
    </sql>

    <select id="findById" resultType="com.project.childprj.domain.User">
        <include refid="SELECT_BASE"/>
        AND id = #{id}
    </select>

    <select id="findByLoginId" resultType="com.project.childprj.domain.User">
        <include refid="SELECT_BASE"/>
        AND loginId = #{loginId}
    </select>

    <select id="findByEmail" resultType="com.project.childprj.domain.User">
        <include refid="SELECT_BASE"/>
        AND email = #{email}
    </select>

    <select id="findByNickName" resultType="com.project.childprj.domain.User">
        <include refid="SELECT_BASE"/>
        AND nickName = #{nickName}
    </select>

    <select id="findByNameAndEmail" resultType="com.project.childprj.domain.User">
        <include refid="SELECT_BASE"/>
        AND name = #{name}
        AND email = #{email}
    </select>

    <select id="findByNameAndLoginId" resultType="com.project.childprj.domain.User">
        <include refid="SELECT_BASE"/>
        AND name = #{name}
        AND loginId = #{loginId}
    </select>

    <update id="updatePassword" flushCache="true" parameterType="com.project.childprj.domain.User">
        UPDATE user SET password = #{password}
        WHERE id = #{id}
    </update>

    <insert id="save" flushCache="true" parameterType="com.project.childprj.domain.User"
            useGeneratedKeys="true" keyColumn="id" keyProperty="id">
        INSERT INTO user (loginId, password, nickName, name, email)
        VALUES (#{loginId}, #{password}, #{nickName}, #{name}, #{email})
    </insert>

    <insert id="saveImage" flushCache="true" parameterType="com.project.childprj.domain.UserImage"
            useGeneratedKeys="true" keyColumn="id" keyProperty="id">
        INSERT INTO user_img (sourceName, fileName, userId)
        VALUES (#{sourceName}, #{fileName}, #{userId})
    </insert>

    <update id="update" flushCache="true" parameterType="com.project.childprj.domain.User">
        UPDATE user SET loginId = #{loginId}, password = #{password}, nickName = #{nickName}, name = #{name}, email = #{email}
        WHERE id = #{id}
    </update>

    <delete id="delete" flushCache="true" parameterType="com.project.childprj.domain.User">
        DELETE FROM user WHERE id = #{id}
    </delete>

</mapper>
